                <mui:ModernButton x:Name="BulkImportButton" HorizontalAlignment="Center" Margin="0,4,0,0"
                                  IconData="M 53.8333,23.75L 50.6666,23.7501L 50.6665,58.5834L 53.8333,58.5834L 53.8333,61.75L 22.1666,61.75L 22.1666,58.5834L 25.3333,58.5834L 25.3333,23.7501L 22.1667,23.75L 22.1667,17.4167L 25.3333,17.4167L 25.3333,14.25L 34.8333,14.25L 35.625,9.10426L 40.375,9.10423L 41.1667,14.25L 50.6667,14.25L 50.6667,17.4167L 53.8333,17.4167L 53.8333,23.75 Z M 24.1458,19L 24.1458,22.1667L 51.8541,22.1667L 51.8541,19L 24.1458,19 Z M 28.5,51.0625L 28.5,57L 36.4166,57L 36.4166,51.0625L 28.5,51.0625 Z M 28.5,43.1459L 28.5,49.0834L 36.4166,49.0834L 36.4166,43.1459L 28.5,43.1459 Z M 28.5,30.4792L 28.5,33.2501L 30.0833,33.2501L 30.0833,30.4792L 28.5,30.4792 Z M 31.6666,30.4792L 31.6666,33.25L 33.25,33.25L 33.25,30.4792L 31.6666,30.4792 Z M 34.8333,30.4792L 34.8333,33.2501L 36.4166,33.2501L 36.4166,30.4792L 34.8333,30.4792 Z M 28.5,25.7292L 28.5,28.5L 30.0833,28.5L 30.0833,25.7292L 28.5,25.7292 Z M 31.6666,25.7292L 31.6666,28.5L 33.25,28.5L 33.25,25.7292L 31.6666,25.7292 Z M 34.8333,25.7292L 34.8333,28.5L 36.4166,28.5L 36.4166,25.7292L 34.8333,25.7292 Z M 28.5,35.2292L 28.5,41.1668L 36.4166,41.1668L 36.4166,35.2292L 28.5,35.2292 Z M 30.0833,36.4168L 34.8332,36.4168L 34.8332,39.9793L 30.0833,39.9793L 30.0833,36.4168 Z M 39.5832,51.0626L 39.5832,57.0001L 47.4999,57.0001L 47.4999,51.0626L 39.5832,51.0626 Z M 39.5832,43.1459L 39.5832,49.0834L 47.4999,49.0834L 47.4999,43.1459L 39.5832,43.1459 Z M 39.5833,30.4793L 39.5832,33.2501L 41.1666,33.2501L 41.1666,30.4793L 39.5833,30.4793 Z M 42.7499,30.4792L 42.7499,33.2501L 44.3332,33.2501L 44.3333,30.4792L 42.7499,30.4792 Z M 45.9166,30.4792L 45.9166,33.2501L 47.4999,33.2501L 47.4999,30.4792L 45.9166,30.4792 Z M 39.5832,25.7292L 39.5833,28.5001L 41.1666,28.5001L 41.1666,25.7292L 39.5832,25.7292 Z M 42.7499,25.7293L 42.7499,28.5001L 44.3333,28.5001L 44.3332,25.7293L 42.7499,25.7293 Z M 45.9166,25.7293L 45.9166,28.5001L 47.4999,28.5001L 47.4999,25.7293L 45.9166,25.7293 Z M 39.5832,35.2293L 39.5832,41.1668L 47.4999,